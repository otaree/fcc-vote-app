extends layout
 
block content
  section.container
    .text-center.row.mt-5
      .col-3
      .col-5
        if error !== undefined
          .alert.alert-danger #{error.message}
        form(action="/signup", method="post")
         .form-group
           label Email address
           input.form-control(type='email', name="email", aria-describedby='emailHelp', placeholder='Enter email')
         .form-group
           label Username
           input.form-control(type='text', name="username", placeholder='Enter sername')
         .form-group
           label Password
           input.form-control(type='password', name="password", placeholder='Password')
         .form-group
           label Confirm Password
           input.form-control(type='password', name="passwordConf", placeholder='Password')
         button.btn.btn-primary(type='submit') Submit
