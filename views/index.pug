extends layout

block content
  .view.hm-black-strong.mt-0(id="intro")
    .full-bg-img
      p.text-center.text-light.font-bold.display-3.pt-5 VoteApp
      p.text-center.text-light A simple voting app to create polls and cast votes
      .text-center
        a.btn.btn-outline-light.px-5.py-3.mr-3.font-bold(role="button" href="/poll/all") Polls
        if user !== undefined
          a.btn.btn-outline-light.px-5.py-3.font-bold(role="button" href="/user/profile") My Polls
        else 
          a.btn.btn-outline-light.px-5.py-3.font-bold(role="button" href="/login") Login